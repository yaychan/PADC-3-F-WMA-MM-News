<?xml version="1.0" encoding="utf-8"?>
<xyz.winmyataung.news.viewpod.LoginUserViewPod xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/user_profile_view_pod_height">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/drawer_background" />

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="@dimen/regular_user_profile"
        android:layout_height="@dimen/regular_user_profile"
        android:layout_marginBottom="@dimen/margin_card_medium_2"
        android:layout_marginLeft="@dimen/margin_card_medium_2"
        android:layout_marginRight="@dimen/margin_card_medium_2"
        android:layout_marginTop="@dimen/margin_xlarge"
        android:src="@drawable/dummy_user_picture" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_user_profile"
        android:layout_below="@id/iv_user_profile"
        android:text="John Doe"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular" />

    <TextView
        android:id="@+id/tv_phone_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/iv_user_profile"
        android:layout_below="@id/tv_name"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="+959 12345678"
        android:textColor="@color/white_full"
        android:textSize="@dimen/text_regular" />

</xyz.winmyataung.news.viewpod.LoginUserViewPod>